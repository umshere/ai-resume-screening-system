# =============================================================================
# AI RESUME SCREENING SYSTEM - ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and configure with your actual values
# DO NOT commit .env file with real API keys to version control!

# =============================================================================
# AI SERVICE SELECTOR - CHOOSE YOUR AI PROVIDER
# =============================================================================
# Set AI_SERVICE to one of: azure, openai, gemini, local
# 
# Recommended options:
# - gemini: Most cost-effective, good performance
# - local: Zero cost, runs on your hardware
# - azure: Enterprise-grade, best for business
# - openai: Direct access to latest models

AI_SERVICE=gemini

# =============================================================================
# GOOGLE GEMINI CONFIGURATION (Recommended for cost efficiency)
# =============================================================================
# Get your free API key from: https://aistudio.google.com/app/apikey
# Only needed if AI_SERVICE=gemini

GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-1.5-flash
GEMINI_MODEL_ORCHESTRATOR=gemini-1.5-flash

# =============================================================================
# LOCAL LLM CONFIGURATION (Zero cost option)
# =============================================================================
# Only needed if AI_SERVICE=local
# Make sure your local LLM server is running (e.g., LM Studio, Ollama, etc.)
# Default LM Studio URL: http://localhost:1234/v1

LOCAL_LLM_BASE_URL=http://localhost:1234/v1
LOCAL_LLM_MODEL=gemma-3-4b-it-qat
LOCAL_LLM_MODEL_ORCHESTRATOR=gemma-3-4b-it-qat

# =============================================================================
# AZURE OPENAI CONFIGURATION (Enterprise option)
# =============================================================================
# Only needed if AI_SERVICE=azure

AZURE_OPENAI_ENDPOINT=https://your-resource-name.openai.azure.com/
AZURE_OPENAI_API_KEY=your-azure-openai-api-key-here
AZURE_OPENAI_MODEL=gpt-4o-mini
AZURE_OPENAI_MODEL_ORCHESTRATOR=gpt-4o-mini
AZURE_OPENAI_API_VERSION=2024-12-01-preview

# =============================================================================
# OPENAI CONFIGURATION (Direct access option)
# =============================================================================
# Only needed if AI_SERVICE=openai

OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini
OPENAI_MODEL_ORCHESTRATOR=gpt-4o-mini

# =============================================================================
# TEMPLATE CONFIGURATION (Required for all services)
# =============================================================================

TEMPLATE_DIR_PROMPTS=src/prompts
TEMPLATE_SYSTEM_ORCHESTRATOR=orchestrator.jinja
TEMPLATE_TERMINATION=termination.jinja
TEMPLATE_SELECTION=selection.jinja

# =============================================================================
# OPTIONAL FEATURES
# =============================================================================

# Bing Search (optional - system works without it)
# Get your key from: https://www.microsoft.com/en-us/bing/apis/bing-web-search-api
BING_API_KEY=your-bing-api-key-here

# =============================================================================
# USAGE PROTECTION SETTINGS (Recommended for cloud deployments)
# =============================================================================
# These settings help protect against unexpected API costs

# Daily cost limit (in USD) - only applies to cloud AI services
MAX_DAILY_COST=2.0

# Maximum resumes per session
MAX_RESUMES_PER_SESSION=20

# Cost estimates per resume (adjust based on your AI service)
COST_PER_RESUME_GEMINI=0.03
COST_PER_RESUME_OPENAI=0.10
COST_PER_RESUME_AZURE=0.10
COST_PER_RESUME_LOCAL=0.00

# Alert threshold (80% of daily limit)
ALERT_THRESHOLD=1.6

# Enable cost monitoring and alerts
ENABLE_COST_ALERTS=true
ENABLE_USAGE_LOGGING=true

# Emergency controls
EMERGENCY_SHUTDOWN=false
MAINTENANCE_MESSAGE=System temporarily unavailable for maintenance
AZURE_OPENAI_MODEL_ORCHESTRATOR=gpt-4o-mini
AZURE_OPENAI_API_VERSION=2024-12-01-preview

# =============================================================================
# OPENAI CONFIGURATION
# =============================================================================
# Only needed if AI_SERVICE=openai
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini
OPENAI_MODEL_ORCHESTRATOR=gpt-4o-mini

# =============================================================================
# GEMINI CONFIGURATION
# =============================================================================
# Only needed if AI_SERVICE=gemini
# Get your API key from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-1.5-flash
GEMINI_MODEL_ORCHESTRATOR=gemini-1.5-flash

# =============================================================================
# TEMPLATE CONFIGURATION
# =============================================================================
TEMPLATE_DIR_PROMPTS=src/prompts
TEMPLATE_SYSTEM_ORCHESTRATOR=orchestrator.jinja
TEMPLATE_SELECTION=selection.jinja
TEMPLATE_TERMINATION=termination.jinja

# =============================================================================
# BING SEARCH CONFIGURATION (OPTIONAL)
# =============================================================================
# Uncomment and configure this if you want web search capabilities
# BING_API_KEY=your_bing_api_key
